  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "open-file unit test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "yarn",
      "args": ["test", "${file}"],
      "outFiles": [
        "${workspaceFolder}/**/*.js",
         "!**/node_modules/**"
      ],
      "console": "integratedTerminal"
    }
  ]
}